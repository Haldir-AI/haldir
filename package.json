{
  "name": "haldir",
  "version": "0.1.0",
  "private": true,
  "description": "Framework-agnostic secure agent skills registry",
  "license": "Apache-2.0",
  "author": "Haldir AI <oss@haldir.ai>",
  "homepage": "https://haldir.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/haldir-ai/haldir.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:e2e": "npx vitest run e2e",
    "test:cli": "pnpm build && node packages/cli/dist/index.js test",
    "lint": "pnpm -r exec tsc --noEmit",
    "schemas": "tsx scripts/generate-schemas.ts",
    "clean": "pnpm -r exec rm -rf dist",
    "validation:collect": "tsx validation/collect-skills.ts",
    "validation:scan": "tsx validation/scan-all-skills.ts",
    "validation:all": "pnpm validation:collect && pnpm validation:scan"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "tsx": "^4.7.0",
    "zod-to-json-schema": "^3.22.4",
    "rimraf": "^6.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
